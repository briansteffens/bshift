import io;

void test_basic()
{
    defer io::print("c");

    u64 x = 5;
    while (x > 0)
    {
        defer io::print("b");
        x = x - 1;
    }

    defer io::print("a");
}

void test_early_return()
{
    defer io::print("c");

    u64 x = 5;
    while (x > 0)
    {
        defer io::print("b");

        x = x - 1;

        if (x == 3)
        {
            return;
        }
    }

    defer io::print("a");
}

u64 main()
{
    test_{{ test }}();
    return 0;
}

