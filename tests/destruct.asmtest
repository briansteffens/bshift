import io;

struct val
{
    u64 x;
}

void val::destruct()
{
    io::print("%u", this.x);
}

void test_basic()
{
    val v1;
    v1.x = 1;

    u64 x = 5;
    while (x > 0)
    {
        val v2;
        v2.x = 2;

        x = x - 1;
    }

    val v3;
    v3.x = 3;
}

void test_early_return()
{
    val v1;
    v1.x = 1;

    u64 x = 5;
    while (x > 0)
    {
        val v2;
        v2.x = 2;

        x = x - 1;

        if (x == 3)
        {
            return;
        }
    }

    val v3;
    v3.x = 3;
}

u64 main()
{
    test_{{ test }}();
    return 0;
}

