#!/usr/bin/env bash

clear && \
echo && echo && echo && echo && echo && echo && echo && echo && echo && \
echo && echo && echo && echo && echo && echo && echo && echo && echo && \
echo && echo && echo && echo && echo && echo && echo && echo && echo && \

ldc main.d lexer.d ast.d parser.d generator.d && \

